<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/top_bottom_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/complaint_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#05c505"
                    android:fontFamily="@font/hav_med"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="5dp"
                    android:text="4 April, 2022"
                    android:textColor="#ffffff"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/voucher_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/hav_thin"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textColor="#444444"
                    android:textSize="13sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/voucher_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hav_med"
                    android:gravity="left"
                    android:text="SUNNY MISHRA W/O PRABHSHANKAR MISHRA AND SUMAN MISHRA W/O PRABHA SHANKAR MISHRA"
                    android:textColor="#444444"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/chat_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/hav_med"
                    android:gravity="left"
                    android:text="SUNNY MISHRA W/O PRABHSHANKAR MISHRA AND SUMAN MISHRA W/O PRABHA SHANKAR MISHRA"
                    android:textColor="#444444"
                    android:textSize="13sp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:id="@+id/current_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:fontFamily="@font/hav_med"
                        android:gravity="left"
                        android:text="You Messaged to Rishtey Customer Support"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/status_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hav_med"
                        android:paddingRight="7dp"
                        android:text="@string/approved"
                        android:textColor="#05c505" />

                    <ImageView
                        android:id="@+id/status_img"
                        android:layout_width="18sp"
                        android:layout_height="18sp"
                        android:src="@drawable/approved" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>