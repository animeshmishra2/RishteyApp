<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".visits.AddTripActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/purple_700"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:fontFamily="@font/furter"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/add_new_car"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/logouts"
            android:visibility="invisible" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/vehicle_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hav_med"
                    android:text="@string/select_car"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/select_model_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borders_new"
                    android:clickable="true"
                    android:padding="2dp">

                    <EditText
                        android:id="@+id/vehicle_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="9"
                        android:background="#ffffff"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/hav_med"
                        android:hint="@string/select_car"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:clickable="false" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:src="@drawable/ic_chevron"
                        app:tint="#000000" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hav_med"
                    android:text="@string/enter_car_number"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borders_new"
                    android:padding="2dp">

                    <EditText
                        android:id="@+id/edit_car_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="9"
                        android:background="#ffffff"
                        android:fontFamily="@font/hav_med"
                        android:hint="@string/enter_car_number"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_chevron"
                        android:visibility="invisible"
                        app:tint="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hav_med"
                    android:text="@string/select_rc"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/select_rc_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borders_new"
                    android:padding="2dp">

                    <EditText
                        android:id="@+id/select_rc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="9"
                        android:background="#ffffff"
                        android:focusable="false"
                        android:fontFamily="@font/hav_med"
                        android:hint="@string/select_rc"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_chevron"
                        android:visibility="visible"
                        app:tint="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hav_med"
                    android:text="@string/select_loan_1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/loan_1_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borders_new"
                    android:padding="2dp">

                    <EditText
                        android:id="@+id/loan_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="9"
                        android:background="#ffffff"
                        android:focusable="false"
                        android:fontFamily="@font/hav_med"
                        android:hint="@string/select_loan_1"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_chevron"
                        android:visibility="visible"
                        app:tint="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hav_med"
                    android:text="@string/select_loan_2"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/loan_2_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borders_new"
                    android:padding="2dp">

                    <EditText
                        android:id="@+id/loan_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="9"
                        android:background="#ffffff"
                        android:focusable="false"
                        android:fontFamily="@font/hav_med"
                        android:hint="@string/select_loan_2"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_chevron"
                        android:visibility="visible"
                        app:tint="#000000" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/add_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/hav_med"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/add_car"
                android:textColor="#ffffff" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>