<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF8C19" />
                    <stroke android:width="1dp" android:color="#FF8C19" />

                    <corners android:bottomLeftRadius="22dp" android:topLeftRadius="22dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <stroke android:width="1dp" android:color="#FF8C19" />

                    <corners android:bottomLeftRadius="22dp" android:topLeftRadius="22dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>